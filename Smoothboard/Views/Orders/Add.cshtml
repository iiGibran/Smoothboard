@model Smoothboard.Models.AddOrderViewModel

@{
}

<!-- Include Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- Include Bootstrap JS and validation scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


<h1>Create New Order</h1>
<form method="POST" action="Add" class="mt-3 mb-5">
    <div class="mb-3">
       <label for="" class="form-label">Name</label>
       <input type="text" class="form-control" asp-for="Name">
       <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Phone</label>
        <input type="tel" class="form-control" asp-for="Phone">
        <span asp-validation-for="Phone" class="text-danger"></span>

    </div>

    <div class="mb-3">
        <label for="" class="form-label">Drop Off Date</label>
        <input type="date" class="form-control" asp-for="DropOffDate">
        <span asp-validation-for="DropOffDate" class="text-danger"></span>

    </div>

    <div class="mb-3">
        <label for="" class="form-label">Surfboard Width in cm</label>
        <input type="number" class="form-control" asp-for="Width">
        <span asp-validation-for="Width" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Surfboard Length in cm</label>
        <input type="number" class="form-control" asp-for="Length">
        <span asp-validation-for="Length" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Custom Design Link</label>
        <input type="text" class="form-control" asp-for="DesignLink">
        <span asp-validation-for="DesignLink" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
