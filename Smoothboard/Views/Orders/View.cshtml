@model Smoothboard.Models.UpdateOrderViewModel

@{
    // C# code if needed
}

<h1>Edit Order</h1>

<!-- Form for updating an order -->
<form method="POST" action="View" class="mt-5">
    <!-- Input field for Order ID (read-only) -->
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>

    <!-- Input field for Name -->
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Input field for Email Address -->
    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Input field for Address -->
    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <!-- Input field for Phone -->
    <div class="mb-3">
        <label for="" class="form-label">Phone</label>
        <input type="tel" class="form-control" asp-for="Phone">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <!-- Input field for Drop Off Date -->
    <div class="mb-3">
        <label for="" class="form-label">Drop Off Date</label>
        <input type="date" class="form-control" asp-for="DropOffDate">
        <span asp-validation-for="DropOffDate" class="text-danger"></span>
    </div>

    <!-- Input field for Surfboard Width -->
    <div class="mb-3">
        <label for="" class="form-label">Surfboard Width in cm</label>
        <input type="number" class="form-control" asp-for="Width">
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>

    <!-- Input field for Surfboard Length -->
    <div class="mb-3">
        <label for="" class="form-label">Surfboard Length in cm</label>
        <input type="number" class="form-control" asp-for="Length">
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>

    <!-- Input field for Custom Design Link -->
    <div class="mb-3">
        <label for="" class="form-label">Custom Design Link</label>
        <input type="text" class="form-control" asp-for="DesignLink">
        <span asp-validation-for="DesignLink" class="text-danger"></span>
    </div>

    <!-- Submit and Delete buttons -->
    <button type="submit" class="btn btn-primary" asp-action="View">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Orders">Delete</button>
</form>
